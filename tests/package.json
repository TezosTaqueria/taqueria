{
  "name": "@taqueria/tests",
  "version": "0.4.0",
  "private": true,
  "description": "This is Taqueria testing project includes unit, integration and e2e tests",
  "main": "index.js",
  "scripts": {
    "test:unit": "npm run test:unit:deno && npm run test:unit:jest",
    "test:unit:deno": "deno test unit/ --allow-all --unstable --import-map ../import_map.json",
    "test:unit:jest": "jest --config jest.config.unit.ts --coverage --no-cache",
    "test:unit:deno:debug": "deno test unit/ --allow-all --unstable --inspect-brk",
    "test:unit:deno:with-coverage": "deno test unit/ --allow-all --unstable --coverage=coverage_report && deno coverage coverage_report && deno coverage coverage_report --lcov > coverage_profile.lcov",
    "test:unit:selected": "deno test unit/taqueria-utils/taqueria-utils.test.ts --allow-all --unstable --coverage=coverage_report && deno coverage coverage_report",
    "test:integration": "jest --config jest.config.integration.ts --no-cache",
    "test:e2e": "jest --config jest.config.e2e.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ecadlabs/taqueria.git",
    "directory": "tests"
  },
  "keywords": [
    "taqueria",
    "tests",
    "e2e",
    "integration",
    "unit"
  ],
  "author": "Jev Bjorsell",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ecadlabs/taqueria/issues"
  },
  "homepage": "https://github.com/ecadlabs/taqueria#readme",
  "devDependencies": {
    "@taquito/signer": "^12.1.1",
    "@taquito/taquito": "^12.1.1",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.35",
    "async-retry": "^1.3.3",
    "axios": "^0.27.2",
    "chokidar": "^3.5.3",
    "jest": "^28.1.0",
    "jest-allure": "^0.1.3",
    "spawn-please": "^1.0.0",
    "ts-jest": "^28.0.3",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2",
    "wait-for-expect": "^3.0.2"
  }
}
