{
	"name": "@taqueria/tests",
	"version": "0.79.0",
	"type": "module",
	"private": true,
	"description": "This is Taqueria testing project includes unit, integration and e2e tests",
	"main": "index.js",
	"scripts": {
		"test:unit": "pnpm run test:unit:deno && pnpm run test:unit:jest",
		"test:unit:deno": "../bin/run-tests.sh deno test unit/ --import-map=../deno.json --allow-all --unstable",
		"test:unit:jest": "../bin/run-tests.sh pnpm exec jest --config jest.config.unit.ts --no-cache",
		"test:unit:jest:debug": "../bin/run-tests.sh pnpm exec jest --config jest.config.unit.ts --no-cache --detectOpenHandles --detectLeaks",
		"test:unit:deno:debug": "../bin/run-tests.sh deno test --inspect-brk unit/ --import-map=../deno.json --allow-all --unstable",
		"test:unit:deno:with-coverage": "../bin/run-tests.sh bash -c 'deno test unit/ --allow-all --unstable --coverage=coverage_report && deno coverage coverage_report && deno coverage coverage_report --lcov > coverage_profile.lcov'",
		"test:unit:selected": "../bin/run-tests.sh bash -c 'deno test unit/taqueria-utils/taqueria-utils.test.ts --allow-all --unstable --coverage=coverage_report && deno coverage coverage_report'",
		"test:integration": "../bin/run-tests.sh pnpm exec jest --config jest.config.integration.ts --no-cache",
		"test:integration:debug": "../bin/run-tests.sh pnpm exec jest --config jest.config.integration.ts --no-cache --detectOpenHandles --detectLeaks",
		"test:e2e": "../bin/run-tests.sh --e2e pnpm exec jest --config jest.config.e2e.ts --maxWorkers=1 --passWithNoTests",
		"test:e2e:smoke": "../bin/run-tests.sh --e2e pnpm exec jest cli-e2e-smoke-tests.spec.ts --config jest.config.e2e.ts --maxWorkers=1",
		"test:e2e:debug": "../bin/run-tests.sh --e2e node --inspect-brk node_modules/.bin/jest --config jest.config.e2e.ts --maxWorkers=1 --detectOpenHandles --detectLeaks",
		"test:e2e:fast": "../bin/run-tests.sh --e2e pnpm exec jest --config jest.config.e2e.ts --testNamePattern='^((?!slowtest).)*$' --maxWorkers=1",
		"test:e2e:check-path": "../bin/run-tests.sh --e2e --skip-setup bash -c 'echo PATH=$PATH && which taq && taq --version'"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tezostaqueria/taqueria.git",
		"directory": "tests"
	},
	"keywords": [
		"taqueria",
		"tests",
		"e2e",
		"integration",
		"unit"
	],
	"author": "Taqueria",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/tezostaqueria/taqueria/issues"
	},
	"homepage": "https://github.com/tezostaqueria/taqueria#readme",
	"devDependencies": {
		"@gmrchk/cli-testing-library": "^0.1.2",
		"@taquito/signer": "24.0.0-RC.0",
		"@taquito/taquito": "24.0.0-RC.0",
		"@types/jest": "^30.0.0",
		"@types/node": "^25.0.3",
		"bn.js": "^5.2.1",
		"chokidar": "^3.5.3",
		"eta": "^3.1.1",
		"execa": "^9.6.1",
		"fix-esm": "^1.0.1",
		"jest": "^30.2.0",
		"jest-cli": "^30.2.0",
		"ts-jest": "^29.4.6",
		"ts-node": "^10.9.1",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@taqueria/node-sdk": "workspace:*"
	}
}
