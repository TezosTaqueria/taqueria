{
	"name": "@taqueria/plugin-jest",
	"version": "0.7.3-rc",
	"description": "A plugin for Taqueria providing automated testing using the Jest Testing Framework",
	"keywords": [
		"taqueria",
		"plugin",
		"jest",
		"testing",
		"tdd",
		"ecad",
		"ecadlabs",
		"tezos"
	],
	"targets": {
		"default": {
			"source": "./index.ts",
			"distDir": "./",
			"context": "node",
			"isLibrary": true,
			"outputFormat": "esmodule"
		}
	},
	"scripts": {
		"build": "npx tsc -noEmit -p ./tsconfig.json && npx parcel build --no-cache 2>&1"
	},
	"author": "ECAD Labs",
	"license": "Apache-2.0",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/ecadlabs/taqueria.git",
		"directory": "taqueria-plugin-jest"
	},
	"dependencies": {
		"@taqueria/node-sdk": "0.7.3-rc",
		"async-retry": "^1.3.3",
		"execa": "^6.1.0",
		"fast-glob": "^3.2.7",
		"jest": "^28.1.0",
		"jest-cli": "^28.1.0",
		"jest-config": "^28.1.0"
	},
	"devDependencies": {
		"@types/async-retry": "^1.3.3",
		"@types/jest": "^27.5.1",
		"parcel": "2.6.1",
		"typescript": "4.7.2"
	}
}
