{
	"name": "taqueria-vscode",
	"displayName": "taqueria",
	"description": "A vscode plugin to make Tezos development easier with Taqueria!",
	"publisher": "ecadlabs",
	"version": "0.5.5",
	"engines": {
		"vscode": "^1.68.1",
		"node": "^16.0.0"
	},
	"engineStrict": true,
	"extensionKind": [
		"ui"
	],
	"targets": {
		"default": {
			"source": "./src/extension.ts",
			"distDir": "./out",
			"context": "node",
			"engines": {
				"node": ">= 16"
			},
			"includeNodeModules": {
				"vscode": false
			}
		},
		"test": {
			"source": [
				"./src/test/runTest.ts",
				"./src/test/suite/index.ts",
				"./src/test/suite/extension.test.ts"
			],
			"distDir": "./out/test",
			"context": "node",
			"engines": {
				"node": ">= 12"
			},
			"includeNodeModules": {
				"vscode": false
			}
		}
	},
	"author": "ECAD Labs",
	"license": "Apache-2.0",
	"icon": "images/taqueria-icon.png",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ecadlabs/taqueria.git"
	},
	"bugs": {
		"url": "https://github.com/ecadlabs/taqueria/issues"
	},
	"homepage": "https://github.com/ecadlabs/taqueria#readme",
	"keywords": [
		"taqueria",
		"tezos",
		"build",
		"test",
		"deploy",
		"ecad",
		"ecadlabs"
	],
	"activationEvents": [
		"onCommand:taqueria.init",
		"onCommand:taqueria.install",
		"onCommand:taqueria.compile_smartpy",
		"onCommand:taqueria.compile_ligo",
		"onCommand:taqueria.start_sandbox",
		"onCommand:taqueria.stop_sandbox",
		"onCommand:taqueria.list_accounts",
		"onCommand:taqueria.deploy",
		"workspaceContains:.taq",
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Taqueria",
			"properties": {
				"taqueria.path": {
					"type": [
						"string",
						"null"
					],
					"default": null,
					"description": "Specifies taqueria binary path"
				}
			}
		},
		"commands": [
			{
				"command": "taqueria.init",
				"category": "Taqueria",
				"title": "Initialize Project",
				"shortTitle": "init",
				"enablement": "!@taqueria-state/is-taqified"
			},
			{
				"command": "taqueria.scaffold",
				"category": "Taqueria",
				"title": "Scaffold Project",
				"shortTitle": "scaffold",
				"enablement": "!@taqueria-state/is-taqified"
			},
			{
				"command": "taqueria.install",
				"category": "Taqueria",
				"title": "Install Plugin",
				"shortTitle": "install",
				"enablement": "@taqueria-state/is-taqified"
			},
			{
				"command": "taqueria.compile_smartpy",
				"category": "Taqueria",
				"title": "Compile (SmartPy)",
				"shortTitle": "compile --plugin smartpy",
				"enablement": "@taqueria/plugin-smartpy"
			},
			{
				"command": "taqueria.compile_ligo",
				"category": "Taqueria",
				"title": "Compile (LIGO)",
				"shortTitle": "compile --plugin ligo",
				"enablement": "@taqueria/plugin-ligo"
			},
			{
				"command": "taqueria.start_sandbox",
				"category": "Taqueria",
				"title": "Start Sandbox",
				"shortTitle": "start sandbox <name>",
				"enablement": "@taqueria/plugin-flextesa"
			},
			{
				"command": "taqueria.stop_sandbox",
				"category": "Taqueria",
				"title": "Stop Sandbox",
				"shortTitle": "stop sandbox <name>",
				"enablement": "@taqueria/plugin-flextesa"
			},
			{
				"command": "taqueria.list_accounts",
				"category": "Taqueria",
				"title": "List Sandbox Accounts",
				"shortTitle": "list accounts <name>",
				"enablement": "@taqueria/plugin-flextesa"
			},
			{
				"command": "taqueria.deploy",
				"category": "Taqueria",
				"title": "Deploy contracts",
				"shortTitle": "deploy",
				"enablement": "@taqueria/plugin-taquito"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "taqueria.init",
					"when": "!@taqueria-state/is-taqified"
				},
				{
					"command": "taqueria.install",
					"when": "@taqueria-state/is-taqified"
				},
				{
					"command": "taqueria.compile_ligo",
					"when": "@taqueria/plugin-ligo"
				},
				{
					"command": "taqueria.compile_smartpy",
					"when": "@taqueria/plugin-smartpy"
				},
				{
					"command": "taqueria.start_sandbox",
					"when": "@taqueria/plugin-flextesa"
				},
				{
					"command": "taqueria.stop_sandbox",
					"when": "@taqueria/plugin-flextesa"
				},
				{
					"command": "taqueria.list_accounts",
					"when": "@taqueria/plugin-flextesa"
				},
				{
					"command": "taqueria.deploy",
					"when": "@taqueria/plugin-taquito"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "npx tsc -noEmit && parcel build --no-cache --no-optimize --no-scope-hoist --detailed-report 2>&1",
		"watch": "parcel watch --no-cache --detailed-report",
		"pretest": "npm run compile",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@taquito/taquito": "^12.1.1",
		"@types/fs-extra": "^9.0.13",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^5.2.6",
		"@types/node": "^17.0.17",
		"@types/promise-memoize": "^1.2.1",
		"@types/vscode": "1.63.0",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"@vscode/test-electron": "^2.1.2",
		"esbuild": "^0.14.15",
		"eslint": "^8.6.0",
		"fs-extra": "^10.1.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"parcel": "^2.6.0",
		"typescript": "4.7.2",
		"vsce": "^2.6.4"
	},
	"dependencies": {
		"@taqueria/protocol": "^0.6.2",
		"comment-json": "^4.1.1",
		"promise-memoize": "^1.2.1",
		"rambda": "^7.0.1"
	}
}
