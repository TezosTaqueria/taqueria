{
	"lineWidth": 120,
	"useTabs": true,
	"typescript": {
		"quoteStyle": "preferSingle",
		"singleBodyPosition": "sameLine",
		"arrowFunction.useParentheses": "preferNone"
	},
	"json": {
	},
	"includes": [
		"**/*.{ts,tsx,js,jsx,cjs,mjs,json}",
		".github/workflows/*"
	],
	"excludes": [
		"**/node_modules",
		"**/*-lock.json",
		"./website",
		"taqueria-plugin-contract-types/example",
		"taqueria-vscode-extension/src/test/suite/data"
	],
	"plugins": [
		"https://plugins.dprint.dev/typescript-0.68.2.wasm",
		"https://plugins.dprint.dev/json-0.15.2.wasm"
	]
}
