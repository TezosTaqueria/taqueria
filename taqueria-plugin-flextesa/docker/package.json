    "build": "npm run build-package"
  },
  "keywords": [
    "taqueria",
    "docker",
    "flextesa",
    "sandbox",
    "local",
    "ecad",
    "ecadlabs",
    "tezos"
  ],
  "author": "ECAD Labs",
  "license": "Apache-2.0",
  "devDependencies": {
    "esbuild": "^0.14.11",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@taqueria/node-sdk": "^0.0.5",
    "partial.lenses": "^14.17.0",
    "promise-retry": "^2.0.1",
    "yargs": "^17.3.1"
  }
}
