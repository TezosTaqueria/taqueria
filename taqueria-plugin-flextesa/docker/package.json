{
  "name": "@taqueria/flextesa-docker",
  "version": "0.0.6",
  "description": "Extends the oxheadalpha/flextesa image for use with Taqueria",
  "main": "index.js",
  "scripts": {
    "prebuild-package": "npm install",
    "build-package": "npx esbuild --platform=node --bundle startFlextesa.ts --outdir=.",
