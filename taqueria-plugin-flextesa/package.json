{
  "name": "@taqueria/plugin-flextesa",
  "version": "0.0.4",
  "description": "A plugin for Taqueria providing local sandbox capabilities built on Flextesa",
  "keywords": [
    "taqueria",
    "plugin",
    "flextesa",
    "sandbox",
    "local",
    "ecad",
    "ecadlabs",
    "tezos"
  ],
  "targets": {
    "default": {
      "source": "./index.ts",
      "distDir": "./",
      "context": "node",
      "isLibrary": true
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-plugin": "npx parcel build --no-cache",
    "build-docker": "cd docker && npm run build",
    "build": "npm run build-docker && npm run build-plugin",
    "build-ci": "npm run build-plugin",
    "pluginInfo": "npx ts-node index.ts --taqRun pluginInfo --i18n {\"foo:\"\"bar\"}"
  },
  "author": "ECAD Labs",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ecadlabs/taqueria.git",
    "directory": "taqueria-plugin-flextesa"
  },
  "dependencies": {
    "fast-glob": "^3.2.7",
    "promise-retry": "^2.0.1",
    "@taqueria/node-sdk": "^0.0.4"
  },
  "devDependencies": {
    "@types/promise-retry": "^1.1.3",
    "parcel": "^2.0.1",
    "typescript": "^4.5.2"
  }
}
