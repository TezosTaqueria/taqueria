{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"description": "",
	"type": "object",
	"properties": {
		"pluginInfo": {
			"type": "object",
			"properties": {
				"schema": {
					"type": "string",
					"minLength": 1
				},
				"version": {
					"type": "string",
					"minLength": 1
				},
				"tasks": {
					"type": "array",
					"uniqueItems": true,
					"minItems": 1,
					"items": {
						"required": [
							"task",
							"command",
							"description"
						],
						"properties": {
							"task": {
								"type": "string",
								"minLength": 1
							},
							"command": {
								"type": "string",
								"minLength": 1
							},
							"aliases": {
								"type": "array",
								"items": {
									"required": [],
									"properties": {}
								}
							},
							"description": {
								"type": "string",
								"minLength": 1
							},
							"options": {
								"type": "array",
								"uniqueItems": true,
								"minItems": 1,
								"items": {
									"required": [
										"shortFlag",
										"flag",
										"description"
									],
									"properties": {
										"shortFlag": {
											"type": "string",
											"minLength": 1
										},
										"flag": {
											"type": "string",
											"minLength": 1
										},
										"description": {
											"type": "string",
											"minLength": 1
										}
									}
								}
							}
						}
					}
				}
			},
			"required": [
				"schema",
				"version",
				"tasks"
			]
		}
	},
	"required": [
		"pluginInfo"
	]
}
